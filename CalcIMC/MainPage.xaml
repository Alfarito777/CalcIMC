<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalcIMC.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Label Text="Peso(Kg)"/>
            <Entry x:Name="EntryPeso" Placeholder="Ingrese aqui su peso"/>
            <Label Text="Estatura(Mts)"/>
            <Entry x:Name="EntryEstatura"/>
            <Label Text="IMC"/>
            <Entry x:Name="EntryIMC" IsEnabled="False"/>
            <Button Text="Calcular" Clicked="Button_Clicked" />
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
